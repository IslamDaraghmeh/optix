{
    "name": "optix/clinic-management-system",
    "description": "Optix Clinic Management System - PHP Backend API",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "ext-gd": "*",
        "ext-curl": "*",
        "ext-zip": "*",
        "phpmailer/phpmailer": "^6.8",
        "dompdf/dompdf": "^2.0",
        "vlucas/phpdotenv": "^5.5",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "App\\Controllers\\": "app/Controllers/",
            "App\\Models\\": "app/Models/",
            "App\\Helpers\\": "app/Helpers/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "@php -r \"opcache_reset();\""
        ],
        "production": [
            "@composer install --no-dev --optimize-autoloader --classmap-authoritative --no-interaction",
            "@php -r \"echo 'Production dependencies installed successfully\\n';\""
        ],
        "clear-cache": [
            "@php -r \"array_map('unlink', glob('storage/cache/*'));\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "apcu-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform-check": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
